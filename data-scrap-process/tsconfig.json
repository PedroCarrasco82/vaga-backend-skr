{
  "compilerOptions": {
    "lib": ["ES2017", "DOM"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ]
}
